<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Corte.LecturasMecanicasFragment">

    <ImageView
        android:id="@+id/imageIslaLecturasMecanicas"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/isla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textIslaLecturasMecanicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isla"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageIslaLecturasMecanicas"
        app:layout_constraintStart_toEndOf="@+id/imageIslaLecturasMecanicas"
        app:layout_constraintTop_toTopOf="@+id/imageIslaLecturasMecanicas" />

    <ImageView
        android:id="@+id/imageTurnoLecturasMecanicas"
        android:layout_width="85dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/turno"
        app:layout_constraintStart_toEndOf="@+id/textIslaLecturasMecanicas"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTurnoLecturasMecanicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turno"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageTurnoLecturasMecanicas"
        app:layout_constraintStart_toEndOf="@+id/imageTurnoLecturasMecanicas"
        app:layout_constraintTop_toTopOf="@+id/imageTurnoLecturasMecanicas" />

    <ListView
        android:id="@+id/listLecturasMecanicas"
        android:layout_width="353dp"
        android:layout_height="272dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTurnoLecturasMecanicas" />

    <Button
        android:id="@+id/btnAceptarLecturasMecanicas"
        android:layout_width="216dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/b3"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listLecturasMecanicas" />

</androidx.constraintlayout.widget.ConstraintLayout>