<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="356dp"
        android:layout_height="117dp"
        android:padding="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txtIdProducto"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginStart="48dp"
            android:background="@drawable/border"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvProducto"
            app:layout_constraintTop_toBottomOf="@+id/tvMontoFajilla"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtExistencia"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginStart="68dp"
            android:background="@drawable/border"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/txtIdProducto"
            app:layout_constraintTop_toBottomOf="@+id/tvCantidadFajillas"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtDescripcionProducto"
            android:layout_width="330dp"
            android:layout_height="33dp"
            android:layout_marginTop="8dp"
            android:text=" Descripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtIdProducto" />

        <TextView
            android:id="@+id/tvProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Producto"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/tvCantidadFajillas"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text=" CANTIDAD"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/tvMontoFajilla"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/tvMontoFajilla"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:text="ID"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/tvProducto"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>