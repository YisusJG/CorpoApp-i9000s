<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cvFajillas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="31dp"
            android:layout_height="41dp"
            android:visibility="invisible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="371dp"
            tools:layout_editor_absoluteY="26dp"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/txtTipoFajilla"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:text="MORRALLA"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTipo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtToalFajillas"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:text="1000"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/txtTipoFajilla"
            app:layout_constraintTop_toBottomOf="@+id/tvCantidadFajillas"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtTotalMontoFajillas"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:text="$10,000"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtToalFajillas"
            app:layout_constraintTop_toBottomOf="@+id/tvMontoFajilla" />

        <TextView
            android:id="@+id/txtRecibioFajillas"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Miguel Angel"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txtEstatus"
            app:layout_constraintTop_toBottomOf="@+id/txtTipoFajilla" />

        <TextView
            android:id="@+id/txtEstatus"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/colorPrimary"
            android:text="ENTREGADA"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTotalMontoFajillas"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TIPO FAJILLA"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/tvCantidadFajillas"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:text="CANTIDAD"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/tvTipo"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/tvMontoFajilla"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="MONTO"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvCantidadFajillas"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>