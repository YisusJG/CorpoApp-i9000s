<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productos.confirmaVenta">

    <ListView
        android:id="@+id/list"
        android:layout_width="333dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/txtdespachosolicitado"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="74dp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="10sp"
        android:text="DESPACHO SOLICITADO, SE AGREGARÁ MONTO EN EL TICKET"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtproducto"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="208dp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txttotal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="143dp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="10sp"
        android:text="TOTAL : "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnagregar"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="13dp"
        android:text="Cargar Productos"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="529dp"
        android:fontFamily="monospace"
        android:lineSpacingExtra="10sp"
        android:text="Confirmar Venta"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/comprar"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/b3"
        android:text="aceptar" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="145dp"
        android:text="eliminar producto seleccionado"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/list2"
        android:layout_width="333dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/border"
        android:visibility="invisible"
        tools:visibility="invisible" />
</RelativeLayout>