<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Monederos.ElegirMonedero">

    <TextView
        android:id="@+id/textTituloSeleccionaOpcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="SELECCIONA UNA OPCIÃ“N"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgTanqueLlenoMonederos"
        android:layout_width="236dp"
        android:layout_height="64dp"
        android:background="@drawable/tanquelleno"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloSeleccionaOpcion" />

    <ImageButton
        android:id="@+id/imgClienteEstacionMonederos"
        android:layout_width="236dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/cliente_estacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTanqueLlenoMonederos" />

</androidx.constraintlayout.widget.ConstraintLayout>