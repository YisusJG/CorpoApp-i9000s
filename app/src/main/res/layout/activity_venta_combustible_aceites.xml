<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentaCombustible.VentaCombustibleAceites">

  <Button
      android:id="@+id/btnScanear"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="Escanear Producto"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.48"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnMas" />

  <Button
      android:id="@+id/btnMenos"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:text="-"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btnMas"
      app:layout_constraintTop_toBottomOf="@+id/txtDescripcion2" />

  <Button
      android:id="@+id/btnMas"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="36dp"
      android:layout_marginTop="40dp"
      android:text="+"
      android:visibility="invisible"
      app:layout_constraintStart_toEndOf="@+id/txtTotal"
      app:layout_constraintTop_toBottomOf="@+id/txtDescripcion2" />

  <Button
      android:id="@+id/btnAceiteVenta"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="@string/perifericos"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/btncombustible"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/txtDescripcion2"
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="28dp"
      android:textColor="#070707"
      android:textSize="15sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.533"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lstProductos"
      tools:ignore="MissingConstraints" />

  <ListView
      android:id="@+id/lstProductos"
      android:layout_width="335dp"
      android:layout_height="278dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="20dp"
      android:background="@drawable/border"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.4"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btncombustible" />

  <Button
      android:id="@+id/btncombustible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="10dp"
      android:text="@string/combustible"
      android:enabled="true"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/txtTotal"
      android:layout_width="94dp"
      android:layout_height="44dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="40dp"
      android:text="1"
      android:textAlignment="textEnd"
      android:visibility="invisible"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtDescripcion2" />

</androidx.constraintlayout.widget.ConstraintLayout>